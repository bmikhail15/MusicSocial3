@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/wwwroot/images/banner1.jpeg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Be cool and join Music Social
                    <a class="btn btn-default" @Html.ActionLink("Learn More","Login","Account")><br />
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/banner2.jpeg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Collaborate with other artists<br />
                   
                    <a class="btn btn-default" >
                        Login
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/banner3.jpeg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Register to upload your music
                    <a class="btn btn-default" href="#"><br />
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/wwwroot/images/banner4.jpeg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Sign up to browse pre-released songs
                    <a class="btn btn-default" href="#"><br />
                        Register
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
   <h1 align="center">Welcome to Music Social</h1>
</div>
